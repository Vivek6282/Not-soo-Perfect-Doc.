 fun.\")\n","        elif user_input.lower() == 'exit':\n","            print('CHAT CLOSED')\n","            break\n","        else:\n","            response = chat_with_bot(user_input)\n","            print(f'DoctorAi: {response}')\n","\n","if __name__ == \"__main__\":\n","    main()\n","\n","\n","\n","\n"]},{"cell_type":"code","execution_count":null,"metadata":{"id":"uYeE-3Ie6oS8"},"outputs":[],"source":[]}],"metadata":{"colab":{"provenance":[{"file_id":"1G_hGaM1ONvGon2eHoYw9mImT_YvhAFWQ","timestamp":1731525007462},{"file_id":"1Viipk6NhVgHQbpMSWB1Ltpzb62Pl32Bv","timestamp":1731492496915},{"file_id":"1sMQDZFCGSxsznlURRP-5A0VrbbzBDWW2","timestamp":1731488649758},{"file_id":"1oZOt1FwWxulfgo8u-bcu2zpUlbaclFlf","timestamp":1730924006661},{"file_id":"1USKhC0NJzRAI7x81MjM0TtXpLNZZAkbR","timestamp":1730921109899},{"file_id":"14_QFbPxzfJSQmMVusSamf0VOUmiFhBYA","timestamp":1730884653268}],"authorship_tag":"ABX9TyMF+6P/rBinf6YQ+h3TOOI5"},"kernelspec":{"display_name":"Python 3","name":"python3"},"language_info":{"name":"python"}},"nbformat":4,"nbformat_minor":0}